{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true,
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "jsx-a11y/img-uses-alt": "off",
    "jsx-a11y/redundant-alt": "off",
    "jsx-a11y/valid-aria-role": "off",
    "new-cap": "off",
    "no-confusing-arrow": 0,
    "import/no-extraneous-dependencies": 0,
    "react/forbid-prop-types": 0,
    "import/extensions": 0,
    "import/no-unresolved": [1, { ignore: ['api', 'config'] }]
  },
  "globals": {
    "Immutable": true,
    "api": true,
    "config": true
  },
}
